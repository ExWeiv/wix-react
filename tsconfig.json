{
    "compilerOptions": {
        "target": "ES2016",
        "module": "ES2015",
        "jsx": "react",
        "outDir": "../src/public/components",
        "lib": [
            "ES2016",
            "DOM"
        ],
        "removeComments": true,
        "strict": false,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "noImplicitReturns": true,
        "esModuleInterop": true,
        "noEmitOnError": false,
        "moduleResolution": "Node"
    },
    "include": [
        "components/**/*"
    ]
}